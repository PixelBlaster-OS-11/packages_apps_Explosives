<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/blaster_settings_title"
    android:gravity="center">
    <PreferenceCategory
        android:gravity="center">

        <!-- Themes -->
        <Preference
            android:key="themes_settings"
            android:title="@string/themes_title"
            android:summary="@string/themes_summary"
            android:fragment="com.blaster.settings.Themes"
            android:icon="@drawable/ic_settings_themes"
            android:layout="@layout/op_home_preference_card_top"
	    />

        <!-- Statusbar -->
        <Preference
            android:id="@+id/statusbar"
            android:title="@string/statusbar_title"
            android:fragment="com.blaster.settings.Statusbar"
            android:icon="@drawable/ic_settings_statusbar"
            android:layout="@layout/op_home_preference_card_middle" 
            />

        <!-- Quick Settings -->
        <Preference
            android:id="@+id/quick_settings"
            android:title="@string/quicksettings_title"
            android:fragment="com.blaster.settings.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"
            android:layout="@layout/op_home_preference_card_middle"
            />


        <!-- Notifications -->
        <Preference
            android:key="notifications_settings"
            android:title="@string/notifications_title"
            android:fragment="com.blaster.settings.Notifications"
            android:icon="@drawable/ic_settings_notifications"
	        android:layout="@layout/op_home_preference_card_bottom"
	    />            


        <!-- Lockscreen -->
        <Preference
            android:key="lockscreen_settings"
            android:title="@string/lockscreen_title"
            android:fragment="com.blaster.settings.Lockscreen"
            android:icon="@drawable/ic_settings_lockscreen"
	        android:layout="@layout/op_home_preference_card_top"
	    />

        <!-- Buttons -->
        <Preference
            android:key="button_settings"
            android:title="@string/button_settings_title"
            android:fragment="com.blaster.settings.ButtonSettings"
            android:icon="@drawable/ic_settings_buttons"
            android:layout="@layout/op_home_preference_card_middle"	    
	    />

        <!-- Miscellaneous -->
        <Preference
            android:key="miscellaneous_settings"
            android:title="@string/miscellaneous_title"
            android:fragment="com.blaster.settings.Miscellaneous"
            android:icon="@drawable/ic_settings_miscellaneous"
	        android:layout="@layout/op_home_preference_card_middle"
	    />

        <!-- FOD -->
        <Preference
            android:key="fod"
            android:title="@string/fod_title"
            android:summary="@string/fod_icon_picker_summary"
            android:fragment="com.blaster.settings.Fod"
            android:icon="@drawable/fod_menu"
	        android:layout="@layout/op_home_preference_card_bottom"
	    />
    </PreferenceCategory>
</PreferenceScreen>  
